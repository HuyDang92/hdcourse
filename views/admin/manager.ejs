<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Dashtreme Admin - Free Dashboard for Bootstrap 4 by Codervent</title>
        <!-- icon -->
        <link
            rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
        />
        <!--favicon-->
        <link rel="icon" href="/admin/images/favicon.ico" type="image/x-icon" />
        <!-- Bootstrap core CSS-->
        <link href="/admin/css/bootstrap.min.css" rel="stylesheet" />
        <!-- Sidebar CSS-->
        <link href="/admin/css/sidebar-menu.css" rel="stylesheet" />
        <!-- Custom Style-->
        <link href="/admin/css/tables.css" rel="stylesheet" />
        <link href="/admin/css/app-style.css" rel="stylesheet" />
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    </head>

    <body class="bg-theme bg-theme1">
        <header><%- include("./header") %></header>
        <!-- Start wrapper-->
        <div id="wrapper">
            <div id="includedHeader"></div>

            <div class="clearfix"></div>

            <div class="content-wrapper">
                <div class="container-fluid">
                    <div class="row d-block">
                        <div class="tabs">
                            <div class="container-tabs">
                                <button class="tablinks active" data-electronic="categories">Danh mục</button> <br />
                                <button class="tablinks" data-electronic="courses">Khóa học</button>
                                <button class="tablinks" data-electronic="users">Người dùng</button>
                            </div>
                        </div>
                        <div class="wrapper_tabcontent mt-3">
                            <!-- Danh sách danh mục -->
                            <div id="categories" class="tabcontent active">
                                <button
                                    class="my-2"
                                    style="cursor: pointer; border: none; padding: 0.5rem 0.5rem; margin-left: 0.7rem"
                                    id="btnAddCat"
                                >
                                    Thêm mới danh mục
                                </button>
                                <div class="col-lg-10">
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">Danh mục</h5>
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">Mã Danh Mục</th>
                                                            <th scope="col">Tên Danh Mục</th>
                                                            <th scope="col">Chức năng</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="categories_list"></tbody>
                                                    <br />
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                </div>
                                <!-- form thêm mới -->
                                <div class="col-lg-6 mt-2">
                                    <div class="formAddItem">
                                        <form id="addCategoryForm" onsubmit="return false">
                                            <h5 id="title_form_cat" style="margin-bottom: 2rem">Thêm mới danh mục</h5>
                                            <div class="form-group">
                                                <label for="catId">ID danh mục</label>
                                                <input type="number" class="form-control" id="catId" placeholder="ID tự động" readonly />
                                            </div>
                                            <div class="form-group">
                                                <label for="catName">Tên danh mục</label>
                                                <input type="text" class="form-control" id="catName" placeholder="Nhập tên danh mục" />
                                            </div>
                                            <button id="btnSubmit" class="btn btn-primary">Thêm mới</button>
                                            <button id="btnSubmitUD" class="btn btn-primary">Cập nhật</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!-- Danh sách khóa học -->
                            <div id="courses" class="tabcontent">
                                <button
                                    style="cursor: pointer; border: none; padding: 0.5rem 0.5rem; margin-left: 0.7rem"
                                    class="my-2"
                                    id="btnAddCourse"
                                >
                                    Thêm mới khóa học
                                </button>
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">khóa học</h5>
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">Mã</th>
                                                            <th scope="col">Mã DM</th>
                                                            <th scope="col">Tên khóa học</th>
                                                            <th scope="col">Giá</th>
                                                            <th scope="col">Ảnh</th>
                                                            <th scope="col">Chức năng</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="course_list"></tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- form thêm khóa học -->
                                <div class="col-lg-6 mt-2">
                                    <div class="formAddItem">
                                        <form id="addCourseForm" onsubmit="return false">
                                            <h5 id="title_form_pro" style="margin-bottom: 2rem">Thêm mới khóa học</h5>
                                            <div class="form-group">
                                                <!-- <label for="productId">ID khóa học</label> -->
                                                <input
                                                    type="text"
                                                    class="form-control"
                                                    id="productId"
                                                    name="productId"
                                                    placeholder="ID tự động"
                                                    value=""
                                                    readonly
                                                />
                                            </div>
                                            <div class="form-group">
                                                <!-- <label for="category">Danh mục</label> -->
                                                <select class="form-control" id="category" name="category">
                                                    <% for (const cate of cates){ %>
                                                    <option value="<%= cate.id %>"><%= cate.name %></option>
                                                    <% } %>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <!-- <label for="teacher">Giảng viên</label> -->
                                                <select class="form-control" id="teacher" name="teacher">
                                                    <% for (const teacher of teachers) { %>
                                                    <option value="<%= teacher.id %>"><%= teacher.name %></option>
                                                    <% } %>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <!-- <label for="productName">Tên khóa học</label> -->
                                                <input
                                                    type="text"
                                                    class="form-control"
                                                    id="productName"
                                                    name="productName"
                                                    placeholder="Nhập tên khóa học"
                                                />
                                            </div>
                                            <div class="form-group">
                                                <!-- <label for="price">Giá khóa học</label> -->
                                                <input type="number" class="form-control" id="price" name="price" placeholder="Nhập giá khóa học" />
                                            </div>
                                            <div class="form-group">
                                                <!-- <label for="price">Ảnh khóa học</label> <br /> -->
                                                <div id="edit_img"></div>
                                                <input
                                                    style="margin-top: 0.3rem"
                                                    type="file"
                                                    class="form-control"
                                                    id="thumb"
                                                    name="thumb"
                                                    placeholder="File ảnh"
                                                    accept="image/*"
                                                    multiple
                                                />
                                                <img style="width: 5rem" class="m-2" id="image-container" src="" alt="" />
                                                <img style="width: 5rem" class="my-2" id="image-container-ud" src="" alt="" />
                                            </div>
                                            <div class="form-group">
                                                <!-- <label for="details">Mô tả khóa tả</label> -->
                                                <textarea
                                                    class="form-control"
                                                    id="details"
                                                    name="details"
                                                    rows="4"
                                                    placeholder="Nhập mô tả khóa học"
                                                ></textarea>
                                            </div>
                                            <div class="form-group">
                                                <!-- <label for="details">Lợi ích của khóa học</label> -->
                                                <textarea
                                                    class="form-control"
                                                    id="benefit"
                                                    name="benefit"
                                                    rows="4"
                                                    placeholder="Nhập lợi ích khóa học"
                                                ></textarea>
                                            </div>
                                            <button id="btnSubmitCourse" class="btn btn-primary">Thêm mới</button>
                                            <button id="btnSubmitCourseUD" class="btn btn-primary">Lưu cập nhật</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!-- Danh sách người dùng -->
                            <div id="users" class="tabcontent">
                                <button
                                    class="my-2"
                                    style="cursor: pointer; border: none; padding: 0.5rem 0.5rem; margin-left: 0.7rem"
                                    id="btnAddUser"
                                >
                                    Thêm mới người dùng
                                </button>
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">Người dùng</h5>
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">ID</th>
                                                            <th scope="col">Tên người dùng</th>
                                                            <th scope="col">Email</th>
                                                            <th scope="col">SDT</th>
                                                            <!-- <th scope="col">Vai trò</th> -->
                                                            <th scope="col">Chức năng</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="users_list"></tbody>
                                                    <br />
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- form new -->
                                <div class="col-lg-6 mt-2">
                                    <div class="formAddItem">
                                        <form id="addUserForm">
                                            <h5 id="title_form_user" style="margin-bottom: 2rem">Thêm mới người dùng</h5>
                                            <div class="form-group">
                                                <label for="userId">ID người dùng</label>
                                                <input type="number" class="form-control" id="id_user" readonly placeholder="ID tự động" />
                                            </div>
                                            <div class="form-group">
                                                <label for="userName">Tên người dùng</label>
                                                <input type="text" class="form-control" id="name" placeholder="Nhập tên người dùng" />
                                            </div>
                                            <div class="form-group">
                                                <label for="userEmail">Email</label>
                                                <input type="email" class="form-control" id="email" placeholder="Nhập email" />
                                            </div>
                                            <div class="form-group">
                                                <label for="userPhone">Số điện thoại</label>
                                                <input type="number" class="form-control" id="phone" placeholder="Nhập số điện thoại" />
                                            </div>
                                            <div class="form-group">
                                                <label for="userPassword">Mật khẩu</label>
                                                <input type="password" class="form-control" id="password" placeholder="Nhập mật khẩu" />
                                            </div>
                                            <div class="form-group">
                                                <label for="userRole">Vai trò</label>
                                                <input type="text" class="form-control" id="role" placeholder="Nhập vai trò" />
                                            </div>
                                            <button type="submit" class="btn btn-primary">Thêm mới</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!--start overlay-->
                    <div class="overlay toggle-menu"></div>
                    <!--end overlay-->
                </div>
                <!-- End container-fluid-->
            </div>
            <!--End content-wrapper-->
            <!--Start Back To Top Button-->
            <a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> </a>
            <!--End Back To Top Button-->
            <!--Start footer-->
            <footer class="footer">
                <div class="container">
                    <div class="text-center">Copyright © 2023 Dashtreme Admin</div>
                </div>
            </footer>
            <!--End footer-->

            <!--start color switcher-->
            <div class="right-sidebar">
                <div class="switcher-icon">
                    <i class="zmdi zmdi-settings zmdi-hc-spin"></i>
                </div>
                <div class="right-sidebar-content">
                    <p class="mb-0">Gaussion Texture</p>
                    <hr />

                    <ul class="switcher">
                        <li id="theme1"></li>
                        <li id="theme2"></li>
                        <li id="theme3"></li>
                        <li id="theme4"></li>
                        <li id="theme5"></li>
                        <li id="theme6"></li>
                    </ul>

                    <p class="mb-0">Gradient Background</p>
                    <hr />

                    <ul class="switcher">
                        <li id="theme7"></li>
                        <li id="theme8"></li>
                        <li id="theme9"></li>
                        <li id="theme10"></li>
                        <li id="theme11"></li>
                        <li id="theme12"></li>
                        <li id="theme13"></li>
                        <li id="theme14"></li>
                        <li id="theme15"></li>
                    </ul>
                </div>
            </div>
            <!--end color switcher-->
            <section>
                <div class="overlayCourse"></div>
                <div class="popup p-4" id="popup">
                    <div class="noti">
                        <div id="course_detail" style="text-align: left"></div>
                    </div>
                </div>
            </section>
        </div>
        <!-- Bootstrap core JavaScript-->
        <script src="/admin/js/bootstrap.min.js"></script>
        <!-- sidebar-menu js -->
        <script src="/admin/js/sidebar-menu.js"></script>
        <!-- Custom scripts -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.5/axios.min.js"></script>
        <script src="/admin/js/app-script.js"></script>
        <script type="module" src="/admin/js/page/tabcontent.js"></script>
        <script type="module" src="/js/admin/categoresManager.js"></script>
        <script type="module" src="/js/admin/coursesManager.js"></script>
        <script type="module" src="/js/admin/usersManager.js"></script>
        <script>
            const fileInput = document.getElementById("thumb");
            const imagePreview = document.getElementById("image-container");
            const imageEdit = document.getElementById("image-container-ud");

            fileInput.addEventListener("change", function () {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.addEventListener("load", function () {
                        imagePreview.src = reader.result;
                        imagePreview.style.display = "block";
                        imageEdit.style.display = "none";
                    });
                    reader.readAsDataURL(file);
                } else {
                    imagePreview.src = "";
                    imagePreview.style.display = "none";
                }
            });
        </script>
    </body>
</html>
