<head>
    <style>
        a:hover {
            text-decoration: none;
        }
        header .search {
            border-radius: 30px;
        }
        header .search input {
            outline: none;
        }
        .authen * {
            color: #000;
        }
        .authen span:hover {
            color: #ff6600 !important;
        }
        .sign-up a {
            border-radius: 50px;
            border: 0.5px solid #ff6600;
        }
    </style>
</head>
<body>
    <!-- Topbar Start -->
    <div class="container-fluid d-none d-lg-block">
        <div class="row align-items-center py-4 px-xl-5">
            <div class="col-lg-4">
                <a href="" class="text-decoration-none">
                    <a href="/">
                        <h1 class="m-0"><span class="text-primary">HD</span>Cours</h1>
                    </a>
                </a>
            </div>
            <div class="col-lg-4 text-right">
                <form action="/search" method="post">
                    <div class="search border ms-5 p-2 d-flex align-items-center">
                        <i class="fa-solid fa-magnifying-glass text-primary"></i>
                        <input class="px-2 border-0" type="text" name="nameSearch" id="nameSearch" placeholder="Tìm kiếm khóa học" />
                    </div>
                </form>
            </div>

            <div class="col-lg-4 text-right">
                <div class="d-inline-flex align-items-center">
                    <div class="cart mx-2">
                        <a href="/cart"><i class="fa-solid fa-cart-shopping"></i></a>
                    </div>
                    <div class="authen d-flex justify-content-between">
                        <% if (infoUser) { %> <% if (infoUser.role == 1) { %>
                        <div class="sign-up mx-2">
                            <a class="p-2" href="/admin"><span class="text-primary">Admin</span></a>
                        </div>
                        <% } else { %>
                        <div class="sign-up mx-2">
                            <a class="p-2" href="/admin/profile">
                                <img
                                    style="width: 1.5rem; height: 1.5rem; border-radius: 50%; object-fit: cover"
                                    src="/img/avt/<%= infoUser.avatar %>"
                                    alt=""
                                />
                                <span class="text-primary"><%= infoUser.fullname %></span>
                            </a>
                            <a style="margin-left: 0.5rem" class="p-2" href="/user/logout"><span class="text-primary">Đăng Xuất</span></a>
                        </div>
                        <% } %> <% } else { %>
                        <div class="sign-up mx-2">
                            <a class="p-2" href="/user"><span class="text-primary">Đăng Nhập</span></a>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- Navbar Start -->
    <div class="container-fluid">
        <div class="row justify-content-between border-top px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a
                    class="d-flex align-items-center justify-content-between bg-secondary w-100 text-decoration-none"
                    data-toggle="collapse"
                    href="#navbar-vertical"
                    style="height: 67px; padding: 0 30px"
                >
                    <h5 class="text-primary m-0"><i class="fa fa-book-open mr-2"></i>Chủ Đề</h5>
                    <i class="fa fa-angle-down text-primary"></i>
                </a>
                <nav
                    class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0 bg-light"
                    id="navbar-vertical"
                    style="width: calc(100% - 30px); z-index: 9"
                >
                    <div id="listCate" class="navbar-nav w-100"></div>
                </nav>
            </div>
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                    <a href="" class="text-decoration-none d-block d-lg-none">
                        <h1 class="m-0"><span class="text-primary">HD</span>COURSES</h1>
                    </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav py-0">
                            <a href="/" class="nav-item nav-link home">Trang Chủ</a>
                            <a href="/courses/page/1" class="nav-item nav-link courses">Khóa Học</a>
                            <a href="/teachers" class="nav-item nav-link teachers">Giáo Viên</a>
                            <a href="/about" class="nav-item nav-link about">Giới thiệu</a>
                            <a href="/contact" class="nav-item nav-link contact">Liên Hệ</a>
                        </div>
                        <a class="btn btn-primary py-2 px-4 ml-auto d-none d-lg-block" href="">Tham Gia Ngay</a>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!-- Navbar End -->
    <script type="module" src="/js/index.js"></script>
    <script>
        let currentUrl = window.location.href;
        const url = currentUrl;
        const str = url.substring(url.lastIndexOf("/") + 1);

        const home = document.querySelector(".home");
        const courses = document.querySelector(".courses");
        const teachers = document.querySelector(".teachers");
        const about = document.querySelector(".about");
        const contact = document.querySelector(".contact");
        if (str == "") {
            home.classList.add("active");
        } else if (str == "teachers") {
            teachers.classList.add("active");
        } else if (str == "about") {
            about.classList.add("active");
        } else if (str == "contact") {
            contact.classList.add("active");
        } else {
            courses.classList.add("active");
        }
    </script>
</body>
